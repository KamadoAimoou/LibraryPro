<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="library.controllers.ReturnController"
      spacing="12"
      styleClass="content-padding">
    <HBox spacing="8">
        <Label text="Issued Books" styleClass="subtitle"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="returnBtn" text="Mark Returned" onAction="#markReturned" styleClass="primary-btn"/>
    </HBox>

    <TableView fx:id="issuedTable" prefHeight="320">
        <columns>
            <TableColumn fx:id="bookIdColumn" text="Book ID" prefWidth="100"/>
            <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="100"/>
            <TableColumn fx:id="issueDateColumn" text="Issued" prefWidth="120"/>
            <TableColumn fx:id="dueDateColumn" text="Due" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>

