<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="library.controllers.IssueController"
      spacing="12"
      styleClass="content-padding">
    <HBox spacing="8">
        <Label text="Available Books" styleClass="subtitle"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Due date"/>
        <DatePicker fx:id="dueDatePicker"/>
        <Button fx:id="issueBtn" text="Issue" onAction="#issueSelected" styleClass="primary-btn"/>
    </HBox>

    <TableView fx:id="availableTable" prefHeight="320">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="200"/>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="140"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>

