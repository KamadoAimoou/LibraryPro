<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="12"
      styleClass="sidebar"
      prefWidth="200">
    <padding><Insets top="20" right="12" bottom="20" left="12"/></padding>
    <children>
        <Label text="Navigate" styleClass="title-small"/>
        <Button text="Books" onAction="#openBooks" styleClass="nav-btn"/>
        <Button text="Issue" onAction="#openIssue" styleClass="nav-btn"/>
        <Button text="Returns" onAction="#openReturn" styleClass="nav-btn"/>
        <Button text="Saved" onAction="#openSaved" styleClass="nav-btn"/>
        <Region VBox.vgrow="ALWAYS"/>
        <Button text="Logout" onAction="#logout" styleClass="danger-btn"/>
    </children>
</VBox>

