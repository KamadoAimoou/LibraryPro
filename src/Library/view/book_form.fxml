<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="library.controller.BookFormController"
      stylesheets="@style.css" padding="20">

    <Label text="Add Book" style="-fx-font-size: 18;"/>

    <TextField fx:id="titleField" promptText="Book title"/>
    <TextField fx:id="authorField" promptText="Author"/>

    <Button text="Save" onAction="#saveBook"/>

</VBox>
