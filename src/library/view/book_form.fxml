<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="library.controller.BookFormController"
            styleClass="book-form-root"
            prefWidth="600" prefHeight="450">

    <stylesheets>
        <URL value="@main.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER" BorderPane.margin="20 0 0 0">
            <VBox styleClass="form-container">
                <Label text="Add/Edit Book Details" styleClass="form-title"/>
                <Separator/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="ALWAYS" prefWidth="300.0"/>
                    </columnConstraints>

                    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="titleField" promptText="Book Title" styleClass="form-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Author:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="authorField" promptText="Author Name" styleClass="form-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Year:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="yearField" promptText="Publication Year" styleClass="form-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="ISBN:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="isbnField" promptText="ISBN (Optional)" styleClass="form-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="20" alignment="CENTER" VBox.margin="30 0 0 0">
                    <Button text="ðŸ’¾ Save"
                            fx:id="btnSave"
                            onAction="#saveBook"
                            styleClass="save-button"/>

                    <Button text="â¬… Back"
                            fx:id="btnBack"
                            onAction="#goBack"
                            styleClass="back-button"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>